<mvc:View
        controllerName="cm.homeautomation.Main"
        xmlns="sap.m" width="100%" height="100%"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:l="sap.ui.layout"
        xmlns:u="sap.ui.unified"
        >

      

    <Page
            showHeader="false"
            enableScrolling="false" >
                    <TileContainer
                            id="container"

                            tiles="{/overviewTiles}" width="100%" height="100%">
                        <StandardTile
                                press="handleSelect"
                                type="{type}"
                                number="{number}"
                                numberUnit="{numberUnit}"
                                title="{title}"
                                info="{info}"
                                infoState="{infoState}" icon="{icon}"/>
                    </TileContainer>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Text id="idMenuClock" text="Uhrzeit" />
                <ToolbarSpacer/>
                <Button id="openMenu" icon="sap-icon://menu" press="handlePressOpenMenu" />
                <Button icon="sap-icon://refresh" press="loadData" />

            </Toolbar>
        </footer>



    </Page>

</mvc:View>