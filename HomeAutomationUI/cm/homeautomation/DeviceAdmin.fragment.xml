<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog title="Device" afterClose="afterDeviceAdminDialogClose" stretch="false">
        <content>

            <f:SimpleForm id="DeviceAdminForm"
                          editable="true"
                          layout="ResponsiveGridLayout" >

            <f:content>
                <Label text="Device Name" />
                <Input value="{deviceAdminDetail>/name}" />

                <Label text="MAC Address" />
                 <Input value="{
                 	path: 'deviceAdminDetail>/mac',
                 	type: 'sap.ui.model.type.String',
                 	constraints: {
                 		search: '^([0-9A-Fa-f]{2}[:-]){5}([0-9A-Fa-f]{2})$'
                 	}
                 }" />
            </f:content>
            </f:SimpleForm>

        </content>
        <buttons>

			<Button text="Delete" press="deviceAdminDialogDelete"/>
            <Button text="Cancel" press="deviceAdminDialogCancel"/>
            <Button text="Ok" press="deviceAdminDialogOk"/>

        </buttons>
    </Dialog>
</core:FragmentDefinition>