<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog title="Network Devices" afterClose="afterNetworkDialogClose"
		stretch="true" horizontalScrolling="false" verticalScrolling="true"
		contentHeight="100%">
		<content>
			<Panel expandable="true" expanded="true" headerText="Devices"
				width="auto" class="sapUiResponsiveMargin" id="remoteControl">
				<content>

					<Table
						items="{
			path: '/networkDevices',
			sorter: {
				path: 'hostname'
			}
		}"
						title="Devices" selectionMode="MultiToggle">
						<columns>
							<Column>
								<Text text="Hostname" />
							</Column>
							<Column>
								<Text text="IP" />
							</Column>
							<Column>
								<Text text="MAC" />
							</Column>
							<Column>
							</Column>
						</columns>

						<items>
							<ColumnListItem>
								<cells>
									<Text text="{networkDevices>hostname}" />
									<Text text="{networkDevices>ip}" />
									<Text text="{networkDevices>mac}" />
									<Button text="Wake-Up" press="networkDeviceWakeUp" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>




				</content>
			</Panel>


		</content>
		<beginButton>
			<Button text="Aktualisieren" press="networkDevicesLoad" />

		</beginButton>
		<endButton>
			<Button text="Schliessen" press="networkDialogClose" />
		</endButton>

	</Dialog>
</core:FragmentDefinition>
