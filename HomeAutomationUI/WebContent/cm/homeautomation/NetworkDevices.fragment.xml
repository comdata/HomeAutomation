<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <Dialog title="Network Devices" afterClose="afterNetworkDialogClose" stretch="true" horizontalScrolling="false" verticalScrolling="false" contentHeight="100%">
        <content>
          <!--<Panel expandable="true" expanded="true" headerText="Fernsteuerung"
    				width="auto" class="sapUiResponsiveMargin" id="remoteControl">
            <content>-->
              <List
              		headerText="Devices" width="100%"
                  items="{
      			path: 'networkDevices>/'
      		}">
      						<items>
      							<InputListItem label="{networkDevices>hostname}" description="{networkDevices>ip} - {networkDevices>mac}"
      								iconDensityAware="false" iconInset="false">
      								<Switch state="{switches>switchState}" change="handleSwitchChange" />
      							</InputListItem>
      						</items>
              	</List>




        <!--    </content>
      </Panel>-->


        </content>
        <beginButton>
            <Button text="Schliessen" press="networkDialogClose"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
