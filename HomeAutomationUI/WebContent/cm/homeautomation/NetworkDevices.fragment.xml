<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <Dialog title="Network Devices" afterClose="afterNetworkDialogClose" stretch="true" horizontalScrolling="false" verticalScrolling="true" contentHeight="100%">
        <content>
          <Panel expandable="true" expanded="true" headerText="Devices"
    				width="auto" class="sapUiResponsiveMargin" id="remoteControl">
            <content>
              <Table
				rows="{/networkDevices}"
				title="Devices"
				selectionMode="MultiToggle"
			    >
				<columns>
          <Column width="11rem">
						<m:Label text="Hostname" />
						<template>
							<m:Text text="{networkDevices>hostname}"/>
						</template>
					</Column>
          <Column width="11rem">
						<m:Label text="IP" />
						<template>
							<m:Text text="{networkDevices>ip}"/>
						</template>
					</Column>
          <Column width="11rem">
            <m:Label text="MAC" />
            <template>
              <m:Text text="{networkDevices>mac}"/>
            </template>
          </Column>
          <Column width="11rem">
            <template>
              <Button text="Wake-Up" press="networkDeviceWakeUp"/>
            </template>
          </Column>
        </columns>
      </Table>




        </content>
      </Panel>


        </content>
        <beginButton>
        	<Button text="Aktualisieren" press="networkDevicesLoad" />

        </beginButton>
        <endButton>
        	<Button text="Schliessen" press="networkDialogClose"/>
        </endButton>

    </Dialog>
</core:FragmentDefinition>
