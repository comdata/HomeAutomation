                     <StandardListItem
                       title="Geschwindigleit"
                        >
                        <Slider min="-8" max="8" value="{train>speed}"
                          width="200px" change="handleTrainSpeedChange" />
                        </StandardListItem>

                        <StandardListItem
              				    title=""
              				     >
<Button text="Alle Stopp" press="trainEmergencyStop"/>
