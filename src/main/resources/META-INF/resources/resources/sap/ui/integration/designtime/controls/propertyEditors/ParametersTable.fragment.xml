<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Table contextualWidth="Auto" items="{path: '/'}">
		<headerToolbar>
			<Toolbar design="Solid">
				<ToolbarSpacer/>
				<Button
					tooltip="{i18n>CARD_EDITOR.PARAMETERS.ADD_PARAMETER}"
					icon="sap-icon://add"
					type="Transparent"
					press="_addParameter" />
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column>
				<Text text="{i18n>CARD_EDITOR.PARAMETERS.KEY}" />
			</Column>
			<Column>
				<Text text="{i18n>CARD_EDITOR.PARAMETERS.VALUE}" />
			</Column>
			<Column width="3rem" hAlign="Right"></Column>
		</columns>
		<items>
			<ColumnListItem>
			<cells>
				<Input value="{_key}" liveChange="_onKeyChange"/>
				<Input value="{value}" liveChange="_onValueChange"/>
				<Button
					tooltip="{i18n>CARD_EDITOR.PARAMETERS.REMOVE_PARAMETER}"
					icon="sap-icon://less"
					type="Transparent"
					press="_removeParameter" />
			</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>